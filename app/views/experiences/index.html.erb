<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="bg-white border d-flex align-items-center justify-content-between p-4">
        <h1 style='font-size: 1rem'><strong>Liste des expériences</strong></h1>
        <%= link_to 'Retour au site', root_url %>
      </div>
      <div class="bg-white border p-3 my-1"><em>Expériences Professionnelles</em></div>
      <% @experiences.where('category = ?', 'Travail').each do |experience| %>
        <% @experience = experience %>
        <%= render 'shared/index-experience-card', object: @experience %>
      <% end %>
      <div class="bg-white border p-3 my-1"><em>Formation</em></div>
      <% @experiences.where('category = ?', 'Études').each do |experience| %>
        <% @experience = experience %>
        <%= render 'shared/index-experience-card', object: @experience %>
      <% end %>
      <div class="bg-white border p-3 my-1"><em>Centres d'intérêt</em></div>
      <% @experiences.where('category = ?', 'Bénévolat').each do |experience| %>
        <% @experience = experience %>
        <%= render 'shared/index-experience-card', object: @experience %>
      <% end %>
    </div>
  </div>
</div>
